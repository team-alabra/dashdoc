{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtBearer": {
    "Authority": "${JwtBearer:Authority}",
    "MetadataAddress": "{JwtBearer:Authority}/.well-known/openid-configuration",
    "IncludeErrorDetails": true,
    "RequireHttpsMetadata": false,
    "TokenValidationParameters": {
      "ValidateIssuer": true,
      "ValidateAudience": false,
      "ValidateIssuerSigningKey": true
    }
  }
}
