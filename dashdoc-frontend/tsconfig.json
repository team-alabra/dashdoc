{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2019",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@components": ["components/*"],
      "@typings": ["typings"],
      "@typings/*": ["typings/*"],
      "@styles": ["styles"],
      "@constants": ["utils/constants.ts"],
      "@tests/*": ["tests/*"],
      "@shared/*": ["components/shared/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist/"]
}
